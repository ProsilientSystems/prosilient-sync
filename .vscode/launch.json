    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'prosilient-cloud'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=prosilient-cloud",
                    "--package=prosilient-cloud"
                ],
                "filter": {
                    "name": "prosilient-cloud",
                    "kind": "bin"
                }
            },
            "env": {
                "DATABASE_URL":"postgres://postgres:123@localhost/prosilient",
                "RUST_LOG":"prosilient_cloud=trace,tower_http=trace",
                "PORT": "8080"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'prosilient-cloud'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=prosilient-cloud",
                    "--package=prosilient-cloud"
                ],
                "filter": {
                    "name": "prosilient-cloud",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}